#!/bin/sh

pid=`ps -ef | grep "proposal_id_mapping.py [NETWORK_ID]" | grep -v grep | /usr/bin/awk '{print $2}'`

cd "[CUR_PATH]"

# echo ${pid}
date >> backend_proposal_id_mapping.log

if [ ! ${pid} ]; then
        # echo "is null"
        echo "No backend process rubbish to clean." >> backend_proposal_id_mapping.log
else
        # echo "not null"
        kill -s 9 ${pid}
        echo "Warning: clean backend process of last round." >> backend_proposal_id_mapping.log
fi
. ../venv/bin/activate
python proposal_id_mapping.py [NETWORK_ID] >> backend_proposal_id_mapping.log
echo 'OK'