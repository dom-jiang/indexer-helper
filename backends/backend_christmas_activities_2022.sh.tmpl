#!/bin/sh

pid=`ps -ef | grep "christmas_activities_2022.py [NETWORK_ID]" | grep -v grep | /usr/bin/awk '{print $2}'`

cd "[CUR_PATH]"

# echo ${pid}
date >> backend_christmas_activities_2022.log

if [ ! ${pid} ]; then
        # echo "is null"
        echo "No backend process rubbish to clean." >> backend_christmas_activities_2022.log
else
        # echo "not null"
        kill -s 9 ${pid}
        echo "Warning: clean backend process of last round." >> backend_christmas_activities_2022.log
fi
. ../venv/bin/activate
python christmas_activities_2022.py [NETWORK_ID] >> backend_christmas_activities_2022.log
echo 'OK'